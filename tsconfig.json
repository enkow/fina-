{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"paths": {
			"@/*": ["./resources/js/*"],
			"@as/*": ["./resources/assets/*"]
		},
		"plugins": [
			{
				"name": "@vuedx/typescript-plugin-vue"
			}
		]
	},
	"include": [
		"typings/*.ts",
		"resources/js/**/*.ts",
		"resources/js/**/*.d.ts",
		"resources/js/**/*.vue",
		"node_modules/vue/macros-global.d.ts"
	],
	"exclude": ["node_modules"],
	"typeRoots": ["./types", "resources/js/Types", "node_modules/@types"]
}
